<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiAuthPageTemplate.Dialogs.LocalAuthDialog"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:MauiAuthPageTemplate.Controls"
             BackgroundColor="Transparent">

	<controls:DialogContainer CloseDialogCommand="{Binding CloseDialog}">
		<Grid HorizontalOptions="Fill"
		      RowDefinitions="Auto, *"
		      VerticalOptions="Fill">

			<Image Margin="0,40,0,40"
			       HeightRequest="100"
			       HorizontalOptions="Center"
			       Source="lock_logo.png"
			       VerticalOptions="Center"
			       WidthRequest="30" />

			<controls:PatternLockView x:Name="PatternView"
			                          Grid.Row="1"
			                          HeightRequest="400"
			                          HorizontalOptions="Center"
			                          VerticalOptions="Center"
			                          WidthRequest="400" />
			
			<controls:PinCodeLockView x:Name="PinCodeView"
									  Grid.Row="1"
									  HeightRequest="400"
									  HorizontalOptions="Center"
									  VerticalOptions="Center"
									  WidthRequest="400" />
		</Grid>
	</controls:DialogContainer>

</ContentPage>