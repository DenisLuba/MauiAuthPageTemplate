<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="MauiAuthPageTemplate.Dialogs.SignOutPopup"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 xmlns:shared_controls="clr-namespace:MauiShared.Controls;assembly=MauiShared"
             xmlns:strings="clr-namespace:MauiAuthPageTemplate.Resources.Strings.SignOutPopupResources"
             xmlns:view_models="clr-namespace:MauiAuthPageTemplate.ViewModels"
             x:DataType="view_models:SignOutPopupViewModel"
             BackgroundColor="Transparent">

	<shared_controls:DialogContainer CloseDialogCommand="{Binding CloseDialogCommand}">
		<VerticalStackLayout Padding="20"
		                     BackgroundColor="White"
		                     HorizontalOptions="Center"
		                     Spacing="20"
		                     VerticalOptions="Center">
			<!--  Sign Out Label  -->
			<Label Text="{x:Static strings:ResourcesSignOutPopup.sure_sign_out}" />

			<!--  Buttons  -->
			<HorizontalStackLayout HorizontalOptions="Center"
			                       Spacing="20"
			                       VerticalOptions="Center">
				<Button Command="{Binding SignOutCommand}"
				        Text="{x:Static strings:ResourcesSignOutPopup.sign_out}" />
				<Button Command="{Binding CloseDialogCommand}"
				        Text="{x:Static strings:ResourcesSignOutPopup.cancel}" />
			</HorizontalStackLayout>
		</VerticalStackLayout>

	</shared_controls:DialogContainer>

</ContentPage>